---
type Props = {
  src: PictureData;
  alt: string;
  className?: string;
  width?: number | string;
  height?: number | string;
  sizes: string;
};

const { src, alt, className, width, height, sizes } = Astro.props;

const sources = Object.entries(src.sources).map<{
  type: string;
  srcset: string;
}>(([type, values]) => {
  return {
    type: `image/${type}`,
    srcset: values.map((i) => i.src + ` ${i.w}w`).join(", "),
  };
});
---

<picture>
  {sources.map(({ type, srcset }) => <source {type} {srcset} {sizes} />)}
  <img
    src={src.img.src}
    width={width ?? src.img.w}
    height={height ?? src.img.h}
    class={className}
    alt={alt}
  />
</picture>
